<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/hit_points_current_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/hit_points_divider"
        android:labelFor="@+id/hit_points_current"
        android:text="@string/hit_points_current"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/hit_points_max_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/hit_points_divider"
        android:labelFor="@+id/hit_points_max"
        android:text="@string/hit_points_max"
        android:textAlignment="center" />

    <NumberPicker
        android:id="@+id/hit_points_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/hit_points_current_label"
        android:layout_toStartOf="@+id/hit_points_divider" />

    <TextView
        android:id="@+id/hit_points_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/hit_points_current"
        android:layout_alignTop="@+id/hit_points_current"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="@string/divider"
        android:textAlignment="center"
        android:textSize="50sp" />

    <NumberPicker

        android:id="@+id/hit_points_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/hit_points_max_label"
        android:layout_toEndOf="@+id/hit_points_divider" />

</RelativeLayout>