<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".fragments.CharacterOverview">

    <RelativeLayout
        android:id="@+id/overview_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorBackground"
        android:elevation="2dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <!-- Attributes -->
        <include
            android:id="@+id/overview_ability_scores"
            layout="@layout/p_ability_scores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <include
            android:id="@+id/overview_ability_scores_separator"
            layout="@layout/p_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/overview_ability_scores" />

        <LinearLayout
            android:id="@+id/overview_various_todo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/overview_ability_scores_separator"
            android:padding="@dimen/padding_narrow">

            <!-- AC -->
            <TextView
                android:id="@+id/character_AC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/character_AC"
                android:textAlignment="center" />

            <!-- Movement -->
            <TextView
                android:id="@+id/character_Speed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/character_Speed"
                android:textAlignment="center" />
            <!-- HitPoints -->
            <TextView
                android:id="@+id/character_HP"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/character_HP"
                android:textAlignment="center" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/overview_top"
        android:orientation="vertical">

        <!-- Weapons & Attacks -->
        <ListView
            android:id="@+id/item_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/overview_create_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/colorAccent"
        android:clickable="true"
        android:elevation="3dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:visibility="invisible">

        <Button
            android:id="@+id/create_weapon"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weapon"
            android:textColor="@color/colorTextAlternative" />

        <Button
            android:id="@+id/create_feature"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feature"
            android:textColor="@color/colorTextAlternative" />

        <Button
            android:id="@+id/create_expendable"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expendable/Resource"
            android:textColor="@color/colorTextAlternative" />

    </LinearLayout>

</RelativeLayout>
