<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".fragments.CharacterOverview">
    <!--tools:showIn="@layout/app_bar_character_sheet">-->

    <!-- Character name is in toolbar -->

    <!-- Attributes -->
    <include layout="@layout/p_ability_scores" />

    <include layout="@layout/p_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_padding">

        <!-- AC -->
        <TextView
            android:id="@+id/character_AC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/character_AC"
            android:textAlignment="center" />

        <!-- Movement -->
        <TextView
            android:id="@+id/character_Speed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/character_Speed"
            android:textAlignment="center" />
        <!-- HitPoints -->
        <TextView
            android:id="@+id/character_HP"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/character_HP"
            android:textAlignment="center" />
    </LinearLayout>

    <include layout="@layout/p_separator" />

    <!-- ListViews Below -->
    <LinearLayout
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Weapons & Attacks -->
        <ListView
            android:id="@+id/weapon_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:listitem="@layout/p_weapon_view_item" />

        <include layout="@layout/p_separator" />

        <!-- Expendables:
                Place things like KI-points/Bardic inspiration or Superiority dice here -->

        <ListView
            android:id="@+id/expendables_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:listitem="@layout/p_expendable_view" />

        <include
            android:id="@+id/expendables_separator"
            layout="@layout/p_separator" />

        <!-- Features -->
        <ListView
            android:id="@+id/feature_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            tools:listitem="@layout/p_ability_view_item" />

    </LinearLayout>

</LinearLayout>
