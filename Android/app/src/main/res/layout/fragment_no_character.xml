<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BasePadding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="be.sanderdecleer.dndapp.fragments.NoCharacter">


    <TextView
        android:id="@+id/no_character_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="@string/no_character_text" />


    <Button
        android:id="@+id/no_character_create"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_character_description"
        android:layout_centerHorizontal="true"
        android:text="@string/no_character_create" />

    <Button
        android:id="@+id/no_character_load"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_character_create"
        android:layout_centerHorizontal="true"
        android:text="@string/no_character_load" />

</RelativeLayout>
