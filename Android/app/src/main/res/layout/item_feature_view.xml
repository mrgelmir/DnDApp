<?xml version="1.0" encoding="utf-8"?>
<!-- Replace merge with RelativeLayout for design purposes -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:id="@+id/ability_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="0dp"
        android:text="@string/feature_default_title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ability_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/ability_title"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="0dp"
        android:text="@string/feature_default_description"
        android:textAlignment="viewEnd" />

</merge>