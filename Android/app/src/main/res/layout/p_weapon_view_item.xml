<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/view_padding">

    <TextView
        android:id="@+id/weapon_display_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/weapon_nickname_placeholder"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/weapon_to_hit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/weapon_to_hit_placeholder" />


    <TextView
        android:id="@+id/weapon_damage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/weapon_damage_placeholder" />
</LinearLayout>